<UserControl
    x:Class="TinyUnrealPackerExtended.Views.Pages.ThemesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:TinyUnrealPackerExtended.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels.Pages"
    d:DataContext="{d:DesignInstance vm:ThemesViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:EqualityConverter x:Key="EqualsMultiConverter" />
    </UserControl.Resources>

    <!--  Сделали панель шире  -->
    <Border
        MinWidth="500"
        Padding="24"
        Background="{DynamicResource CardBackgroundBrush}"
        Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Заголовок Темы  -->
                <RowDefinition Height="Auto" />
                <!--  Список Тем  -->
                <RowDefinition Height="16" />
                <!--  отступ  -->
                <RowDefinition Height="Auto" />
                <!--  Локализация  -->
                <RowDefinition Height="16" />
                <!--  отступ  -->
                <RowDefinition Height="Auto" />
                <!--  Разделитель  -->
                <RowDefinition Height="Auto" />
                <!--  Кнопка  -->
            </Grid.RowDefinitions>

            <!--  1. Заголовок темы  -->
            <StackPanel
                Grid.Row="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <iconPacks:PackIconMaterial
                    Width="24"
                    Height="24"
                    Margin="0,0,8,0"
                    Foreground="{DynamicResource PrimaryButtonBackgroundBrush}"
                    Kind="PaletteOutline" />
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Text="{DynamicResource Settings.Themes.Header}" />
            </StackPanel>

            <!--  2. Список тем  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="0,12,0,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding AvailableThemes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton
                                Command="{Binding DataContext.SelectThemeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Content="{Binding}"
                                Style="{StaticResource ThemeOptionToggleStyle}">
                                <ToggleButton.IsChecked>
                                    <MultiBinding Converter="{StaticResource EqualsMultiConverter}" Mode="OneWay">
                                        <Binding Path="DataContext.SelectedTheme" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        <Binding Path="." />
                                    </MultiBinding>
                                </ToggleButton.IsChecked>
                            </ToggleButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!--  3. Секция языка  -->
            <StackPanel Grid.Row="3" Margin="0,0,0,0">
                <TextBlock
                    Margin="0,0,0,6"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Text="{DynamicResource Settings.Language.Header}" />

                <ComboBox
                    MinWidth="160"
                    Background="{DynamicResource ItemHolderBackgroundBrush}"
                    BorderThickness="0"
                    DisplayMemberPath="DisplayName"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    ItemsSource="{Binding AvailableLanguages}"
                    SelectedItem="{Binding SelectedLanguage}">
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>

            <!--  4. Разделитель  -->
            <Rectangle
                Grid.Row="5"
                Height="1"
                Margin="0,8,0,12"
                Fill="{DynamicResource BorderDefaultBrush}" />

            <!--  5. Кнопка применить  -->
            <Grid Grid.Row="6">
                <Button
                    HorizontalAlignment="Right"
                    Command="{Binding ApplyThemeCommand}"
                    Content="{DynamicResource Common.Apply}"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
