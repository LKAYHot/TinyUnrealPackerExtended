<UserControl
    x:Class="TinyUnrealPackerExtended.Views.Pages.ThemesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:TinyUnrealPackerExtended.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels.Pages"
    d:DataContext="{d:DesignInstance vm:ThemesViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:EqualityConverter x:Key="EqualsMultiConverter" />
    </UserControl.Resources>

    <!--  Сделали панель шире  -->
    <Border
        MinWidth="500"
        Padding="24"
        Background="{DynamicResource CardBackgroundBrush}"
        Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  заголовок  -->
                <RowDefinition Height="*" />
                <!--  список  -->
                <RowDefinition Height="Auto" />
                <!--  разделитель  -->
                <RowDefinition Height="Auto" />
                <!--  кнопка  -->
            </Grid.RowDefinitions>

            <!--  1. Заголовок с иконкой  -->
            <StackPanel
                Grid.Row="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <iconPacks:PackIconMaterial
                    Width="24"
                    Height="24"
                    Margin="0,0,8,0"
                    Foreground="{DynamicResource PrimaryButtonBackgroundBrush}"
                    Kind="PaletteOutline" />
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Text="Выберите тему" />
            </StackPanel>

            <!--  2. Список карточек  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="0,16,0,16"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding AvailableThemes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--  One ToggleButton per theme name  -->
                            <ToggleButton
                                Command="{Binding DataContext.SelectThemeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Content="{Binding}"
                                Style="{StaticResource ThemeOptionToggleStyle}">

                                <!--  Compare SelectedTheme vs this item via a MultiBinding  -->
                                <ToggleButton.IsChecked>
                                    <MultiBinding Converter="{StaticResource EqualsMultiConverter}" Mode="OneWay">
                                        <!--  1st value: the VM’s SelectedTheme  -->
                                        <Binding Path="DataContext.SelectedTheme" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        <!--  2nd value: the current item (e.g. "Light" or "Dark")  -->
                                        <Binding Path="." />
                                    </MultiBinding>
                                </ToggleButton.IsChecked>
                            </ToggleButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!--  3. Разделитель  -->
            <Rectangle
                Grid.Row="2"
                Height="1"
                Margin="0,0,0,16"
                Fill="{DynamicResource BorderDefaultBrush}" />

            <!--  4. Apply справа  -->
            <Grid Grid.Row="3">
                <Button
                    HorizontalAlignment="Right"
                    Command="{Binding ApplyThemeCommand}"
                    Content="Применить"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
