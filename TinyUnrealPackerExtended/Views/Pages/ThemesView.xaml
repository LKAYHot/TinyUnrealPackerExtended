<UserControl x:Class="TinyUnrealPackerExtended.Views.Pages.ThemesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TinyUnrealPackerExtended.Converters"
             xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels.Pages"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ThemesViewModel}">

    <UserControl.Resources>
        <conv:EqualityConverter x:Key="EqualsMultiConverter" />
    </UserControl.Resources>

    <!-- Сделали панель шире -->
    <Border Style="{StaticResource CardStyle}"
            Background="{DynamicResource CardBackgroundBrush}"
            Padding="24"
            MinWidth="500">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- заголовок -->
                <RowDefinition Height="*" />
                <!-- список -->
                <RowDefinition Height="Auto" />
                <!-- разделитель -->
                <RowDefinition Height="Auto" />
                <!-- кнопка -->
            </Grid.RowDefinitions>

            <!-- 1. Заголовок с иконкой -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="PaletteOutline"
                                            Width="24"
                                            Height="24"
                                            Margin="0,0,8,0"
                                            Foreground="{DynamicResource PrimaryButtonBackgroundBrush}" />
                <TextBlock Text="Выберите тему"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

            <!-- 2. Список карточек -->
            <ScrollViewer Grid.Row="1"
                          Margin="0,16,0,16"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding AvailableThemes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- One ToggleButton per theme name -->
                            <ToggleButton Style="{StaticResource ThemeOptionToggleStyle}"
                                          Content="{Binding}"
                                          Command="{Binding DataContext.SelectThemeCommand,
                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}">

                                <!-- Compare SelectedTheme vs this item via a MultiBinding -->
                                <ToggleButton.IsChecked>
                                    <MultiBinding Converter="{StaticResource EqualsMultiConverter}"
                                                  Mode="OneWay">
                                        <!-- 1st value: the VM’s SelectedTheme -->
                                        <Binding Path="DataContext.SelectedTheme"
                                                 RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        <!-- 2nd value: the current item (e.g. "Light" or "Dark") -->
                                        <Binding Path="." />
                                    </MultiBinding>
                                </ToggleButton.IsChecked>
                            </ToggleButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- 3. Разделитель -->
            <Rectangle Grid.Row="2"
                       Height="1"
                       Fill="{DynamicResource BorderDefaultBrush}"
                       Margin="0,0,0,16" />

            <!-- 4. Apply справа -->
            <Grid Grid.Row="3">
                <Button Content="Применить"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ApplyThemeCommand}"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
