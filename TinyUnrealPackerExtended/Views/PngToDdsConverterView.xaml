<UserControl x:Class="TinyUnrealPackerExtended.Views.PngToDdsConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:TinyUnrealPackerExtended.Behaviors"
             xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels"
             DataContext="{Binding PngToDdsConverterVM}">
    <UserControl.Resources>
        <DataTemplate x:Key="ConversionItemTemplate">
            <Border Background="{DynamicResource ItemBackgroundBrush}"
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Name}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontSize="14" />
                    <TextBlock Text="{Binding Status}"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="14"
                               Margin="12,0,0,0" />
                </Grid>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Remove"
                                  Command="{Binding DataContext.RemoveItemCommand,
                                    Source={x:Reference ConversionItemsControl}}"
                                  CommandParameter="{Binding}" />
                    </ContextMenu>
                </Border.ContextMenu>
                <Border.Style>
                    <Style TargetType="Border"
                           BasedOn="{StaticResource FileBorderStyle1}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{DynamicResource AutoInjectItemHoverBackgroundBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Border Style="{StaticResource CardStyle}"
            Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="130" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0" />
                <RowDefinition Height="80" />
                <RowDefinition Height="0" />
                <RowDefinition MinHeight="130"
                               MaxHeight="350" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!-- Drop zone -->
            <hc:DashedBorder x:Name="DropZone"
                             Style="{StaticResource AnimatedDashedDropZone}"
                             Grid.Row="0">
                <i:Interaction.Behaviors>
                    <behaviors:FileDropBehavior FileDropCommand="{Binding DropFilesCommand}" />
                </i:Interaction.Behaviors>
                <Grid>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Drag &amp; Drop.png или .jpg файлы, чтобы загрузить"
                                   FontSize="16"
                                   Foreground="{DynamicResource PlaceholderBrush}"
                                   TextAlignment="Center" />
                        <Button Content="Выбрать файлы"
                                Command="{Binding BrowseFilesCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,12,0,0" />
                    </StackPanel>
                </Grid>
            </hc:DashedBorder>

            <!-- Format selection -->


            <!-- Output folder selector -->
            <Button Content="{Binding ConverterOutputButtonText}"
                    Command="{Binding BrowseOutputFolderCommand}"
                    Style="{StaticResource TrimmedSecondaryButtonStyle}"
                    Grid.Row="1"  Margin="0, 10, 0, 0"/>

            <Grid Grid.Row="3"
                  Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Style="{StaticResource FileBorderStyle1}"
                        Padding="8">
                    <DockPanel>
                        <TextBlock Text="Формат:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,6,0" />
                        <ComboBox ItemsSource="{Binding FilteredFormats}"
                                  SelectedItem="{Binding SelectedFormat}"
                                  HorizontalAlignment="Stretch"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Background="{DynamicResource ItemBackgroundBrush}"
                                  MinWidth="100" />
                    </DockPanel>
                </Border>

                <Border Grid.Column="1"
                        Padding="8"
                        Margin="12,0,0,0">
                    <DockPanel Margin="0,0,-8,0">
                        <iconPacks:PackIconMaterial Kind="FileDocument"
                                                    Width="20"
                                                    Height="20"
                                                    VerticalAlignment="Center"
                                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                                    Margin="0,0,6,0" />
                        <Button Content="{Binding UassetButtonText}"
                                Command="{Binding BrowseUassetFileCommand}"
                                Style="{StaticResource TrimmedSecondaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </DockPanel>
                </Border>
            </Grid>
            <!-- Loaded items list -->
            <Border Style="{StaticResource CardStyle}"
                    Background="{DynamicResource ItemHolderBackgroundBrush}"
                    Grid.Row="5" Margin="5">
                <Grid Margin="-12,-14,-12,-14">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ConversionItemsControl"
                                      ItemsSource="{Binding ConversionItems}"
                                      ItemTemplate="{StaticResource ConversionItemTemplate}"
                                      Margin="10" />
                    </ScrollViewer>
                    <TextBlock Text="Пусто"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontSize="20">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasConversionItems}"
                                                 Value="True">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Convert button -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Row="6">
                <Button Content="Конвертировать"
                        Command="{Binding ConvertCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        IsEnabled="{Binding HasConversionItems}"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>