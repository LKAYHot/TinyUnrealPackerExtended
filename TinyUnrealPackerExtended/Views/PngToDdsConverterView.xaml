<UserControl
    x:Class="TinyUnrealPackerExtended.Views.PngToDdsConverterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:TinyUnrealPackerExtended.Behaviors"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels"
    DataContext="{Binding PngToDdsConverterVM}">
    <UserControl.Resources>
        <DataTemplate x:Key="ConversionItemTemplate">
            <Border
                Margin="0,8,0,0"
                Padding="12"
                Background="{DynamicResource ItemBackgroundBrush}"
                CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="{Binding Name}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        Text="{Binding Status}" />
                </Grid>
                <Border.ContextMenu>
                    <ContextMenu>
                        <!--  Используем общий ключ удаления  -->
                        <MenuItem
                            Command="{Binding DataContext.RemoveItemCommand, Source={x:Reference ConversionItemsControl}}"
                            CommandParameter="{Binding}"
                            Header="{DynamicResource Common.Delete}" />
                    </ContextMenu>
                </Border.ContextMenu>
                <Border.Style>
                    <Style BasedOn="{StaticResource FileBorderStyle1}" TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AutoInjectItemHoverBackgroundBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Border Padding="12" Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="130" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0" />
                <RowDefinition Height="80" />
                <RowDefinition Height="0" />
                <RowDefinition MinHeight="130" MaxHeight="350" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!--  Drop zone  -->
            <hc:DashedBorder
                x:Name="DropZone"
                Grid.Row="0"
                Style="{StaticResource AnimatedDashedDropZone}">
                <i:Interaction.Behaviors>
                    <behaviors:FileDropBehavior FileDropCommand="{Binding DropFilesCommand}" />
                </i:Interaction.Behaviors>
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            Foreground="{DynamicResource PlaceholderBrush}"
                            Text="{DynamicResource PngToDds.DropHint}"
                            TextAlignment="Center" />
                        <Button
                            Margin="0,12,0,0"
                            Command="{Binding BrowseFilesCommand}"
                            Content="{DynamicResource Uploader.SelectFiles}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </Grid>
            </hc:DashedBorder>

            <!--  Output folder selector  -->
            <Button
                Grid.Row="1"
                Margin="0,10,0,0"
                Command="{Binding BrowseOutputFolderCommand}"
                Content="{Binding ConverterOutputButtonText}"
                Style="{StaticResource TrimmedSecondaryButtonStyle}" />

            <!--  Format + Uasset picker  -->
            <Grid Grid.Row="3" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Padding="8"
                    Style="{StaticResource FileBorderStyle1}">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="{DynamicResource PngToDds.Format.Label}" />
                        <ComboBox
                            MinWidth="100"
                            HorizontalAlignment="Stretch"
                            Background="{DynamicResource ItemHolderBackgroundBrush}"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            ItemsSource="{Binding FilteredFormats}"
                            SelectedItem="{Binding SelectedFormat}">
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </DockPanel>
                </Border>

                <Border
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Padding="8">
                    <DockPanel Margin="0,0,-8,0">
                        <iconPacks:PackIconMaterial
                            Width="20"
                            Height="20"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Kind="FileDocument" />
                        <Button
                            HorizontalAlignment="Stretch"
                            Command="{Binding BrowseUassetFileCommand}"
                            Content="{Binding UassetButtonText}"
                            Style="{StaticResource TrimmedSecondaryButtonStyle}" />
                    </DockPanel>
                </Border>
            </Grid>

            <!--  Loaded items list  -->
            <Border
                Grid.Row="5"
                Margin="5"
                Background="{DynamicResource ItemHolderBackgroundBrush}"
                Style="{StaticResource CardStyle}">
                <Grid Margin="-12,-14,-12,-14">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl
                            x:Name="ConversionItemsControl"
                            Margin="10"
                            ItemTemplate="{StaticResource ConversionItemTemplate}"
                            ItemsSource="{Binding ConversionItems}" />
                    </ScrollViewer>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="{DynamicResource Uploader.Empty}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasConversionItems}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!--  Convert button  -->
            <StackPanel
                Grid.Row="6"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding ConvertCommand}"
                    Content="{DynamicResource PngToDds.Convert}"
                    IsEnabled="{Binding HasConversionItems}"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
