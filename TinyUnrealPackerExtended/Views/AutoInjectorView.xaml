<UserControl
    x:Class="TinyUnrealPackerExtended.Views.AutoInjectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:TinyUnrealPackerExtended.Behaviors"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels"
    DataContext="{Binding AutoInjectVM}">
    <Border Padding="12" Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="130" />

                <RowDefinition Height="15" />

                <RowDefinition Height="50" />

                <RowDefinition Height="15" />


                <RowDefinition MinHeight="130" MaxHeight="350" />




                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <hc:DashedBorder
                x:Name="AutoZone"
                Grid.Row="0"
                Style="{StaticResource AnimatedDashedDropZone}">
                <i:Interaction.Behaviors>
                    <behaviors:FileDropBehavior FileDropCommand="{Binding DropAutoFilesCommand}" />
                </i:Interaction.Behaviors>
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!--  Экранирование амперсанда  -->
                        <TextBlock
                            FontSize="16"
                            Foreground="{DynamicResource PlaceholderBrush}"
                            Text="{DynamicResource Uploader.Assets.DropHint}"
                            TextAlignment="Center" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource NavigationButtonDisabledForegroundBrush}"
                            Text="{DynamicResource Uploader.Assets.DropSubHint}"
                            TextAlignment="Center" />
                        <Button
                            Margin="0,12,0,0"
                            Command="{Binding BrowseAutoFilesCommand}"
                            Content="{DynamicResource Uploader.SelectFiles}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </Grid>
            </hc:DashedBorder>


            <Button
                Grid.Row="2"
                Width="Auto"
                MinWidth="640"
                VerticalAlignment="Stretch"
                Command="{Binding BrowseAutoOutputCommand}"
                Content="{Binding AutoInjectOutputButtonText}"
                Style="{StaticResource TrimmedSecondaryButtonStyle}" />

            <Border
                Grid.Row="4"
                Margin="0,0,0,0"
                Background="{DynamicResource ItemHolderBackgroundBrush}"
                Style="{StaticResource CardStyle}">
                <Grid Margin="-12,-14,-12,-14">

                    <ScrollViewer
                        Margin="0,0,0,0"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl
                            x:Name="AutoInjectItemsControl"
                            Margin="10"
                            ItemTemplate="{StaticResource AutoInjectItemTemplate}"
                            ItemsSource="{Binding AutoInjectItems}" />
                    </ScrollViewer>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="{DynamicResource Uploader.Empty}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasAutoInjectItems}" Value="True">
                                        <!--  показываем, когда нет элементов  -->
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
            <StackPanel
                Grid.Row="5"
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Command="{Binding ProcessAutoInjectCommand}"
                    Content="{DynamicResource AutoInjector.Start}"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
