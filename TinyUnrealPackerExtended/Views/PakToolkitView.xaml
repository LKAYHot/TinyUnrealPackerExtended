<UserControl
    x:Class="TinyUnrealPackerExtended.Views.PakToolkitView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:TinyUnrealPackerExtended.Behaviors"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels">
    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="250" />
                <RowDefinition
                    Height="*"
                    MinHeight="130"
                    MaxHeight="130" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Drop Zone  -->
            <hc:DashedBorder Grid.Row="0" Style="{StaticResource AnimatedDashedDropZone}">
                <i:Interaction.Behaviors>
                    <behaviors:FileDropBehavior FileDropCommand="{Binding DropPakFolderCommand}" />
                </i:Interaction.Behaviors>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial
                        Width="60"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryButtonBackgroundBrush}"
                        Kind="FolderZipOutline" />
                    <TextBlock
                        Margin="0,12,0,0"
                        FontSize="20"
                        Foreground="{DynamicResource PlaceholderBrush}"
                        Text="{DynamicResource Pak.DropHint}"
                        TextAlignment="Center" />
                    <Button
                        Margin="0,14,0,0"
                        HorizontalAlignment="Center"
                        Command="{Binding BrowsePakFolderCommand}"
                        Content="{DynamicResource Pak.SelectFolder}"
                        Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>
            </hc:DashedBorder>

            <!--  Список выбранной папки  -->
            <Border
                Grid.Row="1"
                Margin="10,20,10,10"
                Background="{DynamicResource ItemHolderBackgroundBrush}"
                CornerRadius="6">
                <Border.Style>
                    <Style BasedOn="{StaticResource FileBorderStyle}" TargetType="Border" />
                </Border.Style>

                <Grid>
                    <!--  Когда папка не выбрана  -->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="{DynamicResource Pak.Folder.NotSelected}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PakFiles.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PakFiles.Count}" Value="1">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!--  Когда папка выбрана  -->
                    <ItemsControl
                        Margin="10"
                        ItemTemplate="{StaticResource FileItemTemplate}"
                        ItemsSource="{Binding PakFiles}">
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PakFiles.Count}" Value="1">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsPakBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                    </ItemsControl>

                    <!--  Прогресс-бар  -->
                    <ProgressBar
                        Margin="20,31,20,32"
                        Background="{DynamicResource ProgressBarBackgroundBrush}"
                        Foreground="{DynamicResource ProgressBarFillBrush}"
                        IsIndeterminate="True">
                        <ProgressBar.Style>
                            <Style BasedOn="{StaticResource ProgressBarSuccess}" TargetType="ProgressBar">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPakBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </Grid>
            </Border>

            <!--  Кнопки  -->
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Command="{Binding CancelPakCommand}"
                    Content="{DynamicResource Common.Cancel}"
                    Style="{StaticResource SecondaryButtonStyle}" />

                <Button
                    Margin="6,0,0,0"
                    Command="{Binding ProcessPakCompressedCommand}"
                    Content="{DynamicResource Pak.PackCompressed}"
                    Style="{StaticResource PrimaryButtonStyle}" />
                <Button
                    Margin="6,0,0,0"
                    Command="{Binding ProcessPakCommand}"
                    Content="{DynamicResource Pak.Pack}"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
