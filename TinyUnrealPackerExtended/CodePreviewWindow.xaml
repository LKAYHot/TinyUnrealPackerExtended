<Window
    x:Class="TinyUnrealPackerExtended.CodePreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    x:Name="RootWindow"
    Title="Preview JSON"
    Width="800"
    Height="750"
    MinWidth="800"
    MinHeight="750"
    Background="{DynamicResource WindowBackgroundBrush}"
    FontFamily="Bahnschrift"
    FontSize="14"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#1E1E1E" />
        <SolidColorBrush x:Key="CodeForegroundBrush" Color="#FF191919" />
        <SolidColorBrush x:Key="CodeLineNumbersBrush" Color="#FF656565" />
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            ResizeBorderThickness="8"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <Window.InputBindings>
        <KeyBinding
            Key="F"
            Command="{Binding FocusSearchCommand}"
            Modifiers="Control" />
    </Window.InputBindings>

    <Grid>
        <Border
            x:Name="DragArea"
            Height="32"
            VerticalAlignment="Top"
            Background="Transparent"
            MouseDown="DragArea_MouseDown" />

        <Border
            Margin="16,48,16,0"
            Padding="4"
            VerticalAlignment="Top"
            Background="{DynamicResource CardBackgroundBrush}"
            CornerRadius="4"
            Style="{StaticResource CardStyle}">
            <DockPanel LastChildFill="False">
                <!--  Save button on the left  -->
                <StackPanel
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,8,0"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource NavigationButtonStyle}"
                        ToolTip="Сохранить">
                        <iconPacks:PackIconMaterial
                            Width="16"
                            Height="16"
                            Kind="ContentSave" />
                    </Button>
                </StackPanel>

                <!--  Search controls on the right  -->
                <StackPanel
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="SearchBox"
                        Width="200"
                        Style="{StaticResource SearchTextBoxStyle}"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button
                        Margin="4,0,0,0"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource NavigationButtonStyle}"
                        ToolTip="Искать">
                        <iconPacks:PackIconMaterial
                            Width="16"
                            Height="16"
                            Kind="Magnify" />
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <StackPanel
            Margin="0,8,8,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="37"
                Height="32"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding MinimizeWindowCommand}"
                Cursor="Hand">
                <iconPacks:PackIconMaterial
                    Width="16"
                    Height="16"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Kind="WindowMinimize" />
            </Button>
            <Button
                Width="37"
                Height="32"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding MaximizeWindowCommand}"
                Cursor="Hand">
                <iconPacks:PackIconMaterial
                    Width="16"
                    Height="16"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Kind="Fullscreen" />
            </Button>
            <Button
                Width="37"
                Height="32"
                Background="Transparent"
                BorderThickness="0"
                Click="CloseButton_Click"
                Cursor="Hand">
                <iconPacks:PackIconMaterial
                    Width="16"
                    Height="16"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Kind="Close" />
            </Button>
        </StackPanel>

        <Border
            Margin="16,100,16,16"
            CornerRadius="6"
            SnapsToDevicePixels="True"
            Style="{StaticResource CardStyle}">
            <avalon:TextEditor
                x:Name="EditorMain"
                Margin="0"
                Background="Transparent"
                Document="{Binding CodeDocument}"
                FontFamily="Consolas"
                FontSize="14"
                Foreground="{StaticResource CodeForegroundBrush}"
                HorizontalScrollBarVisibility="Auto"
                LineNumbersForeground="{StaticResource CodeLineNumbersBrush}"
                ShowLineNumbers="True"
                SyntaxHighlighting="JavaScript"
                VerticalScrollBarVisibility="Auto" />
        </Border>

        <Grid Visibility="Visible">
            <Canvas
                x:Name="GrowlContainer"
                Margin="10,75,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsHitTestVisible="True" />
        </Grid>
    </Grid>
</Window>
