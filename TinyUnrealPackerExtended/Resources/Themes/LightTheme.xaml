<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Основные фоны и текст -->
    <SolidColorBrush x:Key="WindowBackgroundBrush"
                     Color="#F5F5F5" />
    <SolidColorBrush x:Key="CardBackgroundBrush"
                     Color="White" />
    <!-- для заливки «Light» -->
    <SolidColorBrush x:Key="ThemeOptionLightFillBrush"
                     Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ThemeOptionLightTextBrush"
                     Color="#000000" />
    <SolidColorBrush x:Key="ThemeOptionDarkFillBrush"
                     Color="#FF262629" />
    <SolidColorBrush x:Key="BorderBrushTheme"
                     Color="#FF9A9A9A" />
    <SolidColorBrush x:Key="SettingsCardBackgroundBrush"
                     Color="#FFDADADA" />
    <Color x:Key="ItemBackgroundBrushColor">White</Color>
    <SolidColorBrush x:Key="ItemBackgroundBrush"
                     Color="{StaticResource ItemBackgroundBrushColor}" />
    <Color           x:Key="ItemBackgroundBrushHoverColor">#FFC8C6C6</Color>
    <SolidColorBrush x:Key="ItemBackgroundBrushHover"
                     Color="{StaticResource ItemBackgroundBrushHoverColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush"
                     Color="#333333" />
    <SolidColorBrush x:Key="TextSecondaryBrush"
                     Color="#666666" />
    <Color x:Key="PlaceHolderColor">#888888</Color>

    <SolidColorBrush x:Key="PlaceholderBrush"
                     Color="{StaticResource PlaceHolderColor}" /> 
    <SolidColorBrush x:Key="PlaceholderMainBrush"
                     Color="#888888" />

    <!-- Границы -->
    <SolidColorBrush x:Key="BorderDefaultBrush"
                     Color="#CCCCCC" />
    <Color x:Key="SearchTextBoxDefaultBorderColor">#FFCCCCCC</Color>
    <SolidColorBrush x:Key="SearchTextBoxBorderBrush"
                     Color="{StaticResource SearchTextBoxDefaultBorderColor}" />
    <SolidColorBrush x:Key="BreadcrumbHoverBorderBrush"
                     Color="#B0B0B0" />
    <SolidColorBrush x:Key="DropSuccessBorderBrush"
                     Color="#28A745" />

    <!-- Поисковая строка -->
    <Color x:Key="SearchTextBoxHoverBackgroundColor">#FFF0F0F0</Color>
    <!-- А рядом – кисть, чтобы использовать её в Background -->
    <SolidColorBrush x:Key="SearchTextBoxHoverBackgroundBrush"
                     Color="{DynamicResource SearchTextBoxHoverBackgroundColor}" />
    <!-- Аналогично для обычного состояния -->
    <Color x:Key="SearchTextBoxBackgroundColor">#FFF5F5F5</Color>
    <SolidColorBrush x:Key="SearchTextBoxBackgroundBrush"
                     Color="{DynamicResource SearchTextBoxBackgroundColor}" />

    <Color x:Key="SearchTextBoxFocusBorderColor">#FF4A90E2</Color>
    <SolidColorBrush x:Key="SearchTextBoxFocusBorderBrush"
                     Color="{StaticResource SearchTextBoxFocusBorderColor}" />
    <Color x:Key="SearchTextBoxShadowColor">#FF4A90E2</Color>

    <!-- Expander toggle -->
    <SolidColorBrush x:Key="ExpanderArrowBrush"
                     Color="#666666" />

    <!-- ListViewItem -->
    <SolidColorBrush x:Key="ListViewItemHoverBrush"
                     Color="#FFE4E4E4" />

    <!-- Кнопки навигации -->
    <SolidColorBrush x:Key="NavigationButtonHoverBackgroundBrush"
                     Color="#E5E5E5" />
    <SolidColorBrush x:Key="NavigationButtonPressedBackgroundBrush"
                     Color="#B3B2B2" />
    <SolidColorBrush x:Key="NavigationButtonDisabledForegroundBrush"
                     Color="#AAAAAA" />

    <!-- Кнопка удаления (иконка) -->
    <SolidColorBrush x:Key="DeleteIconHoverBackgroundBrush"
                     Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="DeleteIconPressedBackgroundBrush"
                     Color="#E0E0E0" />

    <!-- Breadcrumb -->
    <SolidColorBrush x:Key="BreadcrumbHoverBackgroundBrush"
                     Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="BreadcrumbPressedBackgroundBrush"
                     Color="#E0E0E0" />

    <!-- SecondaryButton -->
    <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush"
                     Color="#E5E5E5" />
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush"
                     Color="#CCCCCC" />
    <SolidColorBrush x:Key="SecondaryButtonPressedBrush"
                     Color="#AAAAAA" />

    <!-- AnimatedDashedDropZone -->
    <SolidColorBrush x:Key="DashedDropZoneBackgroundBrush"
                     Color="White" />
    <SolidColorBrush x:Key="DashedDropZoneBorderBrush"
                     Color="#CCCCCC" />

    <!-- Drag-and-Drop -->
    <SolidColorBrush x:Key="DragEnterBackgroundBrush"
                     Color="#EFF8FF" />
    <SolidColorBrush x:Key="DragEnterBorderBrush"
                     Color="#0F80D6" />
    <SolidColorBrush x:Key="DragLeaveBackgroundBrush"
                     Color="White" />
    <SolidColorBrush x:Key="DragLeaveBorderBrush"
                     Color="#CCCCCC" />

    <!-- Drop success animation (фон возвращается к White через секунду) -->
    <SolidColorBrush x:Key="DropSuccessBackgroundBrush"
                     Color="#E6FFED" /> 

    <Color x:Key="DragEnterBackgroundColor">#EFF8FF</Color>
    <Color x:Key="DragEnterBorderColor">#0F80D6</Color>

    <!-- DragLeave -->
    <Color x:Key="DragLeaveBackgroundColor">#FFFFFFFF</Color>
    <!-- White -->
    <Color x:Key="DragLeaveBorderColor">#FFCCCCCC</Color>

    <!-- Drop (успешный) -->
    <Color x:Key="DropSuccessBackgroundStartColor">#FFE6FFED</Color>
    <Color x:Key="DropSuccessBorderStartColor">#FF28A745</Color>
    <Color x:Key="DropSuccessBackgroundEndColor">#FFFFFFFF</Color>
    <Color x:Key="DropSuccessBorderEndColor">#FFCCCCCC</Color>

    <!-- Фон элемента AutoInject по умолчанию -->
    <SolidColorBrush x:Key="AutoInjectItemBackgroundBrush"
                     Color="{StaticResource ItemBackgroundBrushColor}" />

    <!-- Фон при наведении -->
    <Color x:Key="AutoInjectItemHoverBackgroundColor">#FFE6F2FF</Color>
    <SolidColorBrush x:Key="AutoInjectItemHoverBackgroundBrush"
                     Color="{StaticResource AutoInjectItemHoverBackgroundColor}" />


    <SolidColorBrush x:Key="BreadcrumbSeparatorBrush"
                     Color="#666666" />

    <Color            x:Key="PrimaryButtonBackgroundDisabledColor">#FF7D7D7D</Color>
    <SolidColorBrush  x:Key="PrimaryButtonBackgroundDisabledBrush"
                      Color="{StaticResource PrimaryButtonBackgroundDisabledColor}" />

    <Color            x:Key="PrimaryButtonBackgroundColor">#0F80D6</Color>
    <SolidColorBrush  x:Key="PrimaryButtonBackgroundBrush"
                      Color="{StaticResource PrimaryButtonBackgroundColor}" />

    <Color            x:Key="PrimaryButtonHoverColor">#0C6EB9</Color>
    <SolidColorBrush  x:Key="PrimaryButtonHoverBrush"
                      Color="{StaticResource PrimaryButtonHoverColor}" />

    <Color            x:Key="PrimaryButtonPressedColor">#004578</Color>
    <SolidColorBrush  x:Key="PrimaryButtonPressedBrush"
                      Color="{StaticResource PrimaryButtonPressedColor}" />

    <SolidColorBrush  x:Key="PrimaryButtonForegroundBrush"
                      Color="White" />

    <SolidColorBrush  x:Key="ItemHolderBackgroundBrush"
                      Color="#FFF1F1F1" />

    <SolidColorBrush  x:Key="ProgressBarFillBrush"
                      Color="#FF48AAFF" />
    <SolidColorBrush  x:Key="ProgressBarBackgroundBrush"
                      Color="#FFD6D6D6" />

    <SolidColorBrush x:Key="ToolbarBackgroundBrush"
                     Color="#FFECECEC" />
    <SolidColorBrush x:Key="TreeViewBackgroundBrush"
                     Color="#FFE8E8E8" />
    <SolidColorBrush x:Key="TreeItemBorderBrush"
                     Color="#E5E5E5" />
    <SolidColorBrush x:Key="TreeItemHoverBrush"
                     Color="{StaticResource AutoInjectItemHoverBackgroundColor}" />
    
    <SolidColorBrush x:Key="TabItemBrush"
                     Color="#0F80D6" />
    <SolidColorBrush x:Key="TextDisabledBrush"
                     Color="#80737272" />
    <SolidColorBrush x:Key="TextSubBrush"
                     Color="#FF8E8E8E" />
    <SolidColorBrush x:Key="IconCloseGeowlBrush"
                     Color="#FFABABAB" />

    <SolidColorBrush x:Key="PrimaryTextBrush"
                     Color="#000000" />
    <SolidColorBrush x:Key="SecondaryTextBrush"
                     Color="#6A6A6A" />

    <SolidColorBrush x:Key="BorderBrush"
                     Color="Transparent" />
    <SolidColorBrush x:Key="RegionBrush"
                     Color="{DynamicResource ItemBackgroundBrushColor}" />
    <SolidColorBrush x:Key="SecondaryRegionBrush"
                     Color="{DynamicResource ItemBackgroundBrushHoverColor}" />

</ResourceDictionary>