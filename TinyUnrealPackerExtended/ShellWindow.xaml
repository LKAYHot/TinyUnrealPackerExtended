<Window
    x:Class="TinyUnrealPackerExtended.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:TinyUnrealPackerExtended.Converters"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:pages="clr-namespace:TinyUnrealPackerExtended.Views.Pages"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    xmlns:vm="clr-namespace:TinyUnrealPackerExtended.ViewModels"
    xmlns:vmExt="clr-namespace:TinyUnrealPackerExtended.ViewModels.Pages"
    Title="Settings"
    Width="900"
    Height="550"
    MinWidth="900"
    MinHeight="550"
    Background="{DynamicResource WindowBackgroundBrush}"
    Cursor=""
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <!--  Converters & fade-in style  -->
    <Window.Resources>
        <conv:TypeToBooleanConverter x:Key="TypeToBooleanConverter" />

        <Style TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <ContentPresenter
                            x:Name="P"
                            Content="{TemplateBinding Content}"
                            Opacity="0" />
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="ContentPresenter.Loaded" SourceName="P">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="P"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="1"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            ResizeBorderThickness="8"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>


    <Window.DataContext>
        <vm:ShellViewModel />
    </Window.DataContext>

    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!--  Title bar  -->
                <RowDefinition Height="*" />
                <!--  Main content  -->
                <RowDefinition Height="Auto" />
                <!--  Bottom bar  -->
            </Grid.RowDefinitions>

            <!--  TITLE BAR  -->
            <Grid
                Grid.Row="0"
                Background="Transparent"
                MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Cog + "Settings"  -->
                <StackPanel
                    Margin="12,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="18"
                        Height="24"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Kind="Cog" />
                    <TextBlock
                        Margin="8,0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="Настройки" />
                </StackPanel>

                <!--  Close button  -->
                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button Click="CloseWindow_Click" Style="{StaticResource NavigationButtonStyle}">
                        <iconPacks:PackIconMaterial
                            Width="16"
                            Height="16"
                            Kind="Close" />
                    </Button>
                </StackPanel>
            </Grid>

            <!--  MAIN AREA  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  SIDEBAR  -->
                <Border
                    Grid.Column="0"
                    Margin="12,12,0,12"
                    Padding="10"
                    Background="{DynamicResource SettingsCardBackgroundBrush}"
                    CornerRadius="8"
                    Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <ToggleButton
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding ShowThemesCommand}"
                            IsChecked="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource TypeToBooleanConverter}, ConverterParameter={x:Type vmExt:ThemesViewModel}}"
                            Style="{StaticResource SidebarItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial
                                    Width="20"
                                    Height="24"
                                    Margin="0,0,8,0"
                                    Kind="Palette" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    Text="Темы" />
                            </StackPanel>
                        </ToggleButton>
                        <!--  другие пункты...  -->
                    </StackPanel>
                </Border>

                <!--  SPLITTER  -->
                <GridSplitter Grid.Column="1" Style="{StaticResource SmoothGridSplitterStyle}" />

                <!--  CONTENT  -->
                <Border
                    Grid.Column="2"
                    Margin="6,12,12,12"
                    Background="{DynamicResource SettingsCardBackgroundBrush}"
                    Style="{StaticResource CardStyle}">
                    <ContentControl Content="{Binding CurrentViewModel}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type vmExt:ThemesViewModel}">
                                <pages:ThemesView />
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </Border>
            </Grid>

            <!--  BOTTOM BAR  -->
            <Border
                Grid.Row="2"
                Margin="12,0,12,12"
                Padding="8,8"
                Background="{DynamicResource CardBackgroundBrush}"
                CornerRadius="6"
                Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="8"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="Для применения изменений перезапустите программу." />

                    <Button
                        Grid.Column="1"
                        Margin="16,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding SaveSettingsCommand}"
                        Content="Подтвердить"
                        Style="{StaticResource PrimaryButtonStyle}" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
